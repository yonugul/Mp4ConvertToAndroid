<Window x:Class="Mp4ConvertToAndroid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <StackPanel>
        <Grid Height="340">
            
            <ScrollViewer Name="scrollViewer" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Height="340" HorizontalAlignment="Stretch">
                <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="340" Background="Black">
                    <TextBlock x:Name="stickyTexts" TextWrapping="Wrap" Width="780" Background="Black" Padding="10" Foreground="Yellow">
                        <Run Text="Videoların dönüştürüleceği klasör adresi aşağıdaki alana girildikten sonra videoları dönüştür butonu ile tüm alt klasördekiler dahil videolar dönüştürülecektir." Foreground="Yellow" />
                        <LineBreak/>
                        <Run Text="Dikkat : Bu işlem uzun sürebilir ve sunucunun işlemci yükünü artırabilir." Foreground="Red" />
                    </TextBlock>
                    <TextBlock x:Name="progressTexts" TextWrapping="Wrap" Width="780" Background="Black" Padding="10" Foreground="Yellow">
                    </TextBlock>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Value="0" Height="10" Width="700" Margin="5"/>
        <DockPanel Width="700">
            <DockPanel VerticalAlignment="Center">
                <Label  HorizontalAlignment="Left" VerticalAlignment="Center">Kullanılacak Cpu</Label>
                <TextBox x:Name="useCpuCount"  HorizontalAlignment="Right" Width="40" Height="20" Text="8" TextChanged="UseCpuCount_OnTextChanged" HorizontalContentAlignment="Right"/>
                <Label x:Name="totalCpuCount"  HorizontalAlignment="Left" VerticalAlignment="Center">24</Label>
                <Label x:Name="cpuUsePercent"  HorizontalAlignment="Left" VerticalAlignment="Center">%50</Label>
            </DockPanel>
       
            <CheckBox x:Name="checkBox" IsChecked="True" HorizontalAlignment="Right" VerticalAlignment="Center" Content="Backup Dosyalarını Sil" Width="257" />
            <Label x:Name="lblProcessTime"  HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="Green">toplam süre 00:00:00</Label>

  
        </DockPanel>
        <DockPanel Width="700">
            <Label HorizontalAlignment="Left" Height="30" VerticalAlignment="Center">Klasör Adresi</Label>
            <TextBox x:Name="folder" TextWrapping="Wrap"  HorizontalAlignment="Right" VerticalAlignment="Center" Width="600" Height="30"></TextBox>
        </DockPanel>
        <DockPanel Width="700">
    
            <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center" Height="40" Width="700">
               
                <Button Width="150" Height="30" HorizontalAlignment="Left" Click="Clear_Click" Content="Ekranı Temizle" Margin="0,0,10,0"/>
                <Button HorizontalAlignment="Right" Click="ClearBackup" VerticalAlignment="Center" Content="Backup Temizle" Margin="0,0,10,0" Width="150" Height="30"/>
                <Button x:Name="btnPlay" Width="50" Height="30" HorizontalAlignment="Right" Click="Play" Content=">" Background="Green" IsEnabled="False"/>
                <Button x:Name="btnPause" Width="50" Height="30" HorizontalAlignment="Right" Click="Pause" Content="||" Background="Red" IsEnabled="False"/>
                <Button Width="150" Height="30" HorizontalAlignment="Right" Click="ButtonRun_Click" Content="Videoları Dönüştür" x:Name="buttonConvert" Background="CadetBlue"/>

            </DockPanel>
           
        </DockPanel>
    </StackPanel>
